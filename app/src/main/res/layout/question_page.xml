<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsPage"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="-36dp">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="353dp"
        android:layout_height="307dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/didact_gothic"
        android:gravity="center_horizontal|center_vertical"
        android:text="Perguntas"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    

    <RadioGroup
        android:id="@+id/rdGroup"
        android:layout_width="360dp"
        android:layout_height="280dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        app:layout_constraintVertical_bias="0.437">

        <RadioButton
            android:id="@+id/rdBtn1"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:fontFamily="@font/didact_gothic"
            android:text="RadioButton"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdBtn2"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:fontFamily="@font/didact_gothic"
            android:text="RadioButton"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdBtn3"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:fontFamily="@font/didact_gothic"
            android:text="RadioButton"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdBtn4"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:fontFamily="@font/didact_gothic"
            android:text="RadioButton"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RadioGroup>

    <Button
        android:id="@+id/btnPular"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/didact_gothic"
        android:text="Pular"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnResp"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/btnParar"
        app:layout_constraintTop_toBottomOf="@+id/rdGroup"
        app:layout_constraintVertical_bias="0.403" />

    <Button
        android:id="@+id/btnParar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/didact_gothic"
        android:text="Parar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdGroup"
        app:layout_constraintVertical_bias="0.403" />

    <Button
        android:id="@+id/btnResp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/didact_gothic"
        android:text="Responder"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdGroup"
        app:layout_constraintVertical_bias="0.403" />

    <TextView
        android:id="@+id/tvTxtInf"
        android:layout_width="187dp"
        android:layout_height="22dp"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPular"
        app:layout_constraintVertical_bias="0.375" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>